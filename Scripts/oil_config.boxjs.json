{
  "name": "油价配置",
  "description": "油价小组件本地化配置",
  "resource": "https://raw.githubusercontent.com/haoyu592/DSbox",
  "data": {
    "oil_province": {
      "title": "省份选择",
      "description": "选择您所在的省份",
      "type": "select",
      "default": "shanghai",
      "options": {
        "beijing": "北京",
        "shanghai": "上海",
        "tianjin": "天津",
        "chongqing": "重庆",
        "guangdong": "广东",
        "jiangsu": "江苏",
        "zhejiang": "浙江",
        "shandong": "山东",
        "sichuan": "四川",
        "hubei": "湖北",
        "hunan": "湖南",
        "hebei": "河北",
        "henan": "河南"
      }
    },
    "oil_92": {
      "title": "显示92#汽油",
      "description": "是否显示92#汽油价格",
      "type": "switch",
      "default": true
    },
    "oil_95": {
      "title": "显示95#汽油",
      "description": "是否显示95#汽油价格",
      "type": "switch",
      "default": true
    },
    "oil_98": {
      "title": "显示98#汽油",
      "description": "是否显示98#汽油价格",
      "type": "switch",
      "default": false
    },
    "oil_0": {
      "title": "显示0#柴油",
      "description": "是否显示0#柴油价格",
      "type": "switch",
      "default": false
    },
    "refresh_interval": {
      "title": "刷新频率",
      "description": "油价数据刷新频率",
      "type": "select",
      "default": "4",
      "options": {
        "2": "每2小时",
        "4": "每4小时",
        "6": "每6小时",
        "24": "每天"
      }
    },
    "text_size": {
      "title": "字体大小",
      "description": "小组件文字大小(12-20)",
      "type": "number",
      "default": "16"
    },
    "display_logo": {
      "title": "显示中石化Logo",
      "description": "是否在小组件中显示中石化Logo",
      "type": "switch",
      "default": true
    }
  },
  "scripts": {
    "oil_price_task": {
      "title": "油价获取任务",
      "description": "获取最新油价数据",
      "url": "https://raw.githubusercontent.com/yourname/repo/oil_task.js"
    }
  },
  "storage": {
    "oil_data": {
      "title": "油价数据",
      "description": "存储最新油价信息"
    },
    "oil_config": {
      "title": "配置缓存",
      "description": "存储用户配置"
    }
  }
}
