{
  "name": "油价配置",
  "description": "油价小组件本地化配置",
  "author": "haoyu592",
  "resource": "https://raw.githubusercontent.com/haoyu592",
  "data": {
    "oil_province": {
      "title": "省份选择",
      "description": "选择您所在的省份",
      "type": "select",
      "options": {
        "beijing": "北京",
        "shanghai": "上海",
        "tianjin": "天津",
        "chongqing": "重庆",
        "guangdong": "广东",
        "jiangsu": "江苏",
        "zhejiang": "浙江",
        "shandong": "山东",
        "sichuan": "四川",
        "hubei": "湖北",
        "hunan": "湖南",
        "hebei": "河北",
        "henan": "河南"
      },
      "default": "shanghai"
    },
    "oil_types": {
      "title": "显示油号",
      "description": "选择要显示的油号类型",
      "type": "multiselect",
      "options": {
        "92#": "92#汽油",
        "95#": "95#汽油",
        "98#": "98#汽油",
        "0#": "0#柴油"
      },
      "default": ["92#", "95#"]
    },
    "refresh_interval": {
      "title": "刷新频率",
      "description": "油价数据刷新频率",
      "type": "select",
      "options": {
        "2": "每2小时",
        "4": "每4小时",
        "6": "每6小时",
        "24": "每天"
      },
      "default": "4"
    },
    "text_size": {
      "title": "字体大小",
      "description": "小组件文字大小(12-20)",
      "type": "number",
      "default": "16"
    },
    "display_logo": {
      "title": "显示中石化Logo",
      "description": "是否在小组件中显示中石化Logo",
      "type": "switch",
      "default": true
    }
  },
  "scripts": {
    "oil_price_task": {
      "title": "油价获取任务",
      "url": "https://raw.githubusercontent.com/yourname/repo/oil_task.js",
      "description": "获取最新油价数据"
    }
  },
  "storage": {
    "oil_data": {
      "title": "油价数据",
      "description": "存储最新油价信息"
    },
    "oil_config": {
      "title": "配置缓存",
      "description": "存储用户配置"
    }
  }
}
