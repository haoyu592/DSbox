  // 油价数据存储
  oil_price_data: {
    title: "油价数据",
    type: "json",
    value: null
  },
  
  // 刷新频率（供Scriptable使用）
  refresh_interval: {
    title: "刷新频率(小时)",
    type: "number",
    default: 4,
    value: 4
  }
};

// 导出配置
$.export(() => {
  Object.keys($.config).forEach(key => {
    $.data[key] = $.config[key].value;
  });
}, "配置数据");

// 设置默认值
$.defaults = () => {
  Object.keys($.config).forEach(key => {
    if ($.config[key].default !== undefined) {
      $.data[key] = $.config[key].default;
    }
  });
  $.export();
};

// 初始化
$.init = () => {
  $.defaults();
};

$.init();
